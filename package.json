    "fs-extra": "^10.1.0",
    "gifsicle": "^5.2.1",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "mkdirp": "^1.0.4",
    "pngquant-bin": "^6.0.1",
    "uglify-js": "^3.17.3",
    "xlsx": "^0.18.5"
  }
